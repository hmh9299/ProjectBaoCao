<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/blue"
    tools:context=".MovieFragment">

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/titleDS"
        android:text="DANH SÁCH PHIM"
        android:textColor="#1E5C9E"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="22dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/search"
        android:layout_width="414dp"
        android:layout_height="34dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleDS">

        <TextView
            android:id="@+id/searchDS"
            android:layout_width="260dp"
            android:layout_height="28dp"
            android:background="@drawable/edittext_layout"
            android:gravity="center"
            android:hint="Tìm kiếm..." />

        <!--        <androidx.appcompat.widget.AppCompatButton-->
        <!--            android:id="@+id/btSearchDS"-->
        <!--            android:layout_width="64dp"-->
        <!--            android:layout_height="35dp"-->
        <!--            android:textColor="@color/white"-->
        <!--            android:layout_marginLeft="10dp"-->
        <!--            android:background="@drawable/light_button_layout"-->
        <!--            android:text="Tìm"-->
        <!--            app:layout_constraintBottom_toBottomOf="parent"-->
        <!--            app:layout_constraintRight_toRightOf="parent" />-->

    </LinearLayout>


    <TextView
        android:id="@+id/realtimeDS"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search"
        android:layout_marginTop="10dp"
        android:textSize="13dp"
        android:hint="Giờ hiện tại"
        android:textColor="#416183"
        android:layout_width="300dp"
        android:layout_height="wrap_content"/>

    <ListView
        android:id="@+id/listDS"
        android:layout_width="375dp"
        android:layout_height="485dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/realtimeDS" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btEdit"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:textColor="@color/white"
        android:layout_marginRight="88dp"
        android:textAllCaps="false"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_light"
        android:text="Sửa"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btAddDS"
        android:layout_width="80dp"
        android:textAllCaps="false"
        android:textSize="18dp"
        android:layout_height="40dp"
        android:layout_marginRight="200dp"
        android:textColor="@color/white"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_light"
        android:text="Thêm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
